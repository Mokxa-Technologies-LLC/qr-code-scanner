[
    {
        "title": "@@form.qrCodeScanner.config@@",
        "properties": [
            {
                "name": "id",
                "label": "@@form.textfield.id@@",
                "type": "textfield",
                "required": "True",
                "regex_validation": "^[a-zA-Z0-9_]+$",
                "validation_message": "@@form.textfield.invalidId@@"
            },
            {
                "name": "label",
                "label": "@@form.textfield.label@@",
                "type": "textfield",
                "required": "True",
                "value": "@@org.mokxa.QRCodeScanner.pluginLabel@@"
            }
        ]
    },
    {
        "title" : "@@form.textfield.advancedOptions@@",
        "properties" : [
            {
            "label" : "UI",
            "type" : "header"
            },
            {
                "name" : "hideLabel",
                "label" : "Hide Element label",
                "type" : "checkbox",
                "value" : "False",
                "options" : [{
                    "value" : "true",
                    "label" : ""
                }]
            },
            {
                "name" : "showValue",
                "label" : "Show QR Code value after scan",
                "type" : "checkbox",
                "value" : "False",
                "options" : [{
                    "value" : "true",
                    "label" : ""
                }]
            },
            {
                "name" : "hideOnLoad",
                "label" : "Hide QR Code scanner on page load",
                "type" : "checkbox",
                "value" : "False",
                "options" : [{
                    "value" : "true",
                    "label" : ""
                }]
            },
            {
                "name" : "size",
                "label" : "QR Code Scanner size (px)",
                "description" : "This property field will change the max width of the QR Code Scanner (Default Max Width is 650px, Height is automatically calculated.)",
                "type" : "textfield",
                "regex_validation" : "^[0-9]+$",
                "validation_message" : "Please input only decimal values."
            }
        ]
    }
]